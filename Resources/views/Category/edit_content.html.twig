{% trans_default_domain 'ir_category' %}

<div class="page-header">
    <h1>{{ 'category.edit.title'|trans }}</h1>
</div>

<form action="{{ path('ir_category_edit', {'id': category.id}) }}" {{ form_enctype(form) }} method="POST">
    {% include 'IRCategoryBundle:Category:form.html.twig' %}
    <div class="form-actions">
        <input type="submit" value="{{ 'category.edit.save'|trans }}" class="btn btn-large btn-primary" />
        &nbsp;
        <a href="{{ path('ir_category_list', {'parentId': parentId}) }}" class="btn btn-large">{{ 'category.edit.cancel'|trans }}</a>         
    </div> 
</form>